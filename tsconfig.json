{
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "rootDir": ".",
    "target": "es6",
    "typeRoots": ["./node_modules/@types/", "./node_modules"],
    "types": [],
    "lib": ["es2017", "es2019", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "outDir": "dist"
  }
}
